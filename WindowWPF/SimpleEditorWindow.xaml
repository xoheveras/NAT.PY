<Window x:Class="Test.WindowWPF.SimpleEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test.WindowWPF"
        mc:Ignorable="d"
        Title="SimpleEditorWindow" Height="712.5" Width="1124" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*"/>
            <ColumnDefinition Width="479*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="136*"/>
        </Grid.RowDefinitions>
        <Menu Height="25" VerticalAlignment="Top" Background="#FF252931" Foreground="#FFA6A6A6" FontFamily="Montserrat Medium" Grid.RowSpan="1" Grid.ColumnSpan="2">
            <MenuItem Header="File" Margin="0,4,0,0" Foreground="#FFA6A6A6">
                <MenuItem Header="New Project" ></MenuItem>
                <MenuItem Header="Open" >
                    <MenuItem Header="Open Project"></MenuItem>
                    <MenuItem Header="Open File" ></MenuItem>
                </MenuItem>
            </MenuItem>
        </Menu>
        <RichTextBox Grid.Column="1" HorizontalAlignment="Left" Height="679.5" Margin="0,0.018,0,0" Grid.Row="1" VerticalAlignment="Top" Width="958">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <ListBox HorizontalAlignment="Left" Height="679.5" Margin="0,0.018,0,0" Grid.Row="1" VerticalAlignment="Top" Width="158"/>
    </Grid>
</Window>
