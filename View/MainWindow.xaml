<Window x:Class="NAT.PY.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NAT.PY"
        mc:Ignorable="d"
        Title="MainWindow" Background="{Binding backGroundColor}" Height="1000" Width="1500" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu Height="25" VerticalAlignment="Top" Foreground="{Binding fontColor}" Background="{Binding backGroundColor}">
            <MenuItem Header="File">
                <MenuItem Header="New File"></MenuItem>
                <MenuItem Header="Open File"></MenuItem>
                <Separator />
                <MenuItem Header="Save"></MenuItem>
                <MenuItem Header="Save As"></MenuItem>
            </MenuItem>
            <MenuItem Header="Windows"></MenuItem>
        </Menu>


    </Grid>
</Window>
